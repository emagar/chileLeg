%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\section{Separation of power}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\frame {                      % SLIDE

    \frametitle{In the literature}

\textbf{Presidential} \emph{v.} \textbf{parliamentary} democracy \\
(Bagehot 1867, Wilson 1884, Lijphart 1984, Linz 1990, Shugart\&Carey 1992, Cheibub 2007)

\bigskip


\begin{center}
Will focus not of pros and cons \\ but on \\ how \alert{decisions} are made \\ under \alert{separation of power}
\end{center}

\bigskip

Application to presidential system, \\ generalizes to SoP in other forms

}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\frame {                      % SLIDE

    \frametitle{Presidentialism: two principles decision-making}

\be
\item \alert{Concurrent consent} between the branches
 \bi
 \item executive veto
 \item congressional veto
 \ei
\item \textcolor{green}{Unilateralism} of one over the other
 \bi
 \item veto override
 \item executive decree
 \ei
\ee

\bigskip 

Principle 2 restricted, otherwise cancels principle 1

\bigskip 

\begin{block}{}
Unilateralism overlooked in early literature \\
pressure boiler with no safety valves (Linz 1990)
\end{block}

% \makebox(0,0){\put(0,2.2\normalbaselineskip){%
%                $\left.\rule{0pt}{1.1\normalbaselineskip}\right\}$ foo}}

}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\frame {                      % SLIDE

    \frametitle{Veto \& unilateralism side-by-side}


\begin{center}
\resizebox{\linewidth}{!}{
\begin{tabular}{c|c|c}
\emph{Authority}        & \emph{Executive}             &  \emph{Legislative}              \\
\emph{by which$\ldots$} & \emph{branch}                &  \emph{branch}                   \\ \hline
$\ldots$ branch rejects & \textbf{executive veto}      & \textbf{legislative veto}    \\
a proposal              & \textcolor{white}{Ch.3 veto in US states}       &  \textcolor{white}{Ch.8 reacting to executive}    \\
by the other            & \textcolor{white}{Ch.5 stunts Chile/Mex.}       &  \textcolor{white}{decrees in Argentina}            \\ \hline
$\ldots$ branch over-   & \textbf{unilateralism}       & \textbf{veto override}         \\
comes a rejection       & \textcolor{white}{Ch.6 urgency in Chile}        &  \textcolor{white}{(Ch.4 hopeless}           \\
by the other            & \textcolor{white}{Ch.7 exec.\ coalition}        &  \textcolor{white}{vetoes in Brazil)}                     \\
\end{tabular}
%\caption{Veto power and unilateral provisions, side to side}
}
\end{center}
}
