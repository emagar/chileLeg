tmp2 <- tmp2[duplicated(tmp2$week)==FALSE,]; tmp2$date <- NULL
tmp <- merge(x = tmp, y = tmp2, by = "week", all.x = TRUE, all.y = TRUE);
tmp$y[is.na(tmp$y)==TRUE] <- 0
