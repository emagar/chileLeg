    axis(1, at = c(dmy(paste("20/03/", yrs, sep = "")), seq( dmy(paste("15/04/", yrs, sep = ""), tz = "chile"), length = 5, by = "1 month" )), labels = c("Mar","Apr","May","Jun","Jul","Aug"), tick = FALSE, padj = -.5)
