    sel2 <- which(bills$sessions$dsen==1 & bills$sessions$date>dmy(paste("10/03/", yrs, sep = ""), tz = "chile") & bills$sessions$date<dmy(paste("11/09/", yrs, sep = ""), tz = "chile"))
