polygon(x = tmp2, y = tmp3, col=rgb(1, 0, 0,0.5), border=NA)
tmp2 <- c(tmp$from[13], tmp$from[13], tmp$to[13], tmp$to[13]); tmp2 <- tmp2[order(tmp2)]
tmp3 <- rep(tmp$pdt[13], 2); tmp3 <- tmp3[order(c(13,13+.5))]; tmp3 <- c(0, tmp3, 0)
