    sel2 <- which(bills$sessions$ddip==1 & bills$sessions$date>dmy(paste("10/09/", yrs, sep = ""), tz = "chile") & bills$sessions$date<dmy(paste("11/03/", (yrs+1), sep = ""), tz = "chile"))
}
for (i in sel2){ 
    lines(rep(bills$sessions$date[i], 2), c(0,90), col = "grey", lwd = .5)
}
# horizontal lines
